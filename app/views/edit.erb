<form action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <h2><label for="name">Name: </label>
    <input type="text" name="name" value="<%= @post.name %>"></h2>
  <h2><label for="content">Content: </label>
    <input type="text" name="content" value="<%= @post.content %>"></h2>
    <input type="submit" id="submit" value="save">
</form>
