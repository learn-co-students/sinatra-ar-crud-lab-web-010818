<form  action="/posts/<%= @post.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name: <input id="name"type="text" name="post[name]" value="<%= @post.name %>"></p>
  <p>Content: <input id="content" type="text" name="post[content]" value="<%= @post.content %>"></p>
  <input id="submit" type="submit" name="submit" value="Submit">
</form>
